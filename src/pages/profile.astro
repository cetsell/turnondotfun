---
import Layout from '../layouts/Layout.astro';
import { supabase } from '../lib/supabase';

// This would normally be protected by auth
const { data: userData } = await supabase
  .from('users')
  .select(`
    *,
    assets (*)
  `)
  .single();

// Fetch user's owned content
const { data: ownedContent } = await supabase
  .from('marketplace')
  .select(`
    *,
    assets (*),
    stories (*)
  `)
  .eq('creator_id', userData?.user_id);
---

<Layout title="Profile - MyWorld">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Profile Section -->
      <div class="md:col-span-1">
        <div class="bg-gray-800 rounded-lg p-6">
          <div class="text-center">
            <div class="w-32 h-32 mx-auto bg-gray-700 rounded-full mb-4"></div>
            <h2 class="text-2xl font-bold text-white mb-2">{userData?.username}</h2>
            <p class="text-gray-400">{userData?.email}</p>
          </div>
          
          <div class="mt-6 space-y-4">
            <button class="w-full px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700">
              Edit Profile
            </button>
            <button class="w-full px-4 py-2 bg-gray-700 text-white rounded-lg hover:bg-gray-600">
              Change Avatar
            </button>
          </div>
        </div>
      </div>

      <!-- Content Section -->
      <div class="md:col-span-2">
        <h2 class="text-2xl font-bold text-white mb-6">Your Content</h2>
        
        <!-- Created Content -->
        <div class="mb-8">
          <h3 class="text-xl font-semibold text-white mb-4">Created Content</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            {ownedContent?.map((item) => (
              <div class="bg-gray-800 rounded-lg overflow-hidden">
                <div class="aspect-video bg-gray-900"></div>
                <div class="p-4">
                  <h4 class="text-lg font-semibold text-white">
                    {item.stories?.title || item.assets?.name}
                  </h4>
                  <p class="text-gray-400 text-sm mt-1">
                    {item.status === 'active' ? 'Listed for $' + item.price : 'Not Listed'}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
          <div class="bg-gray-800 rounded-lg p-4">
            <h4 class="text-gray-400 text-sm">Total Sales</h4>
            <p class="text-2xl font-bold text-white">$0</p>
          </div>
          <div class="bg-gray-800 rounded-lg p-4">
            <h4 class="text-gray-400 text-sm">Items Created</h4>
            <p class="text-2xl font-bold text-white">{ownedContent?.length || 0}</p>
          </div>
          <div class="bg-gray-800 rounded-lg p-4">
            <h4 class="text-gray-400 text-sm">Active Listings</h4>
            <p class="text-2xl font-bold text-white">
              {ownedContent?.filter(item => item.status === 'active').length || 0}
            </p>
          </div>
          <div class="bg-gray-800 rounded-lg p-4">
            <h4 class="text-gray-400 text-sm">Worlds Visited</h4>
            <p class="text-2xl font-bold text-white">0</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
